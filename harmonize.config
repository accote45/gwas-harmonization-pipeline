// Nextflow configuration for GWAS harmonization pipeline

params {
    // Default parameters
    json_file = null
    output_dir = null
    dual_build = true
    help = false
    
    // Base directory structure
    base_dir = '/sc/arion/projects/paul_oreilly/data/GWASs'
}

// Process execution settings
process {
    executor = 'lsf'
    clusterOptions = '-P acc_paul_oreilly -q premium'
    module = 'R'
    
    withName: HARMONIZE {
        cpus = 1
        memory = '8 GB'
        time = '2h'
        cache = false
    }
    
    withName: MERGE_BUILDS {
        cpus = 1
        memory = '4 GB'
        time = '30m'
        cache = false
    }
}

// Execution profiles
profiles {
    standard {
        process.executor = 'lsf'
    }
    
    local {
        process.executor = 'local'
    }
}